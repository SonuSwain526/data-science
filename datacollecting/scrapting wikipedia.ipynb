import requests
from bs4 import BeautifulSoup





content = requests.get("https://books.toscrape.com/")
if content.status_code == 200:
    for i in range(1,51):
        with open(f"htmls/html{i}.html", "w", encoding="utf-8") as f:
                url = f"https://books.toscrape.com/catalogue/page-{i}.html"
                content1 = requests.get(url)
                soup = BeautifulSoup(content1.text, "lxml")
                f.write(soup.prettify())
                print(f"page {i} downloaded")
    # print(soup.find_all('h3'))
    print("url fetched sucessfully")
else:
    print("url colud not use")


