from sklearn.preprocessing import MinMaxScaler
from sklearn.impute import SimpleImputer
from sklearn.preprocessing import OneHotEncoder
from sklearn.pipeline import Pipeline
from sklearn.compose import ColumnTransformer


stratified_trainData.columns

num_pipeline = Pipeline([
    ("imputer", SimpleImputer(strategy="mean")),
    ("scaling", MinMaxScaler())
])
cat_pipeline = Pipeline([
    ("cat imputer", SimpleImputer(strategy="most_frequent")),
    ("encoding", OneHotEncoder())
])


combineByclmtransformer = ColumnTransformer([
    ("num", num_pipeline, stratified_trainData.columns[:-2]),
    ("cat", cat_pipeline, stratified_trainData.columns[9:10])
])


final = combineByclmtransformer.fit_transform(stratified_trainData)


pd.DataFrame(final, columns=stratified_trainData.columns[:-1], index=stratified_trainData.index)


